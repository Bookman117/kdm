#!/bin/bash
#Purpose: Deploy kubernetes on ubuntu server 20.04/22.04 LTS & Rocky Linux 8/9 & RHEL 8/9.
#Create-Date: 2022-08-10

# Environment pre-setting
function host-os-detection()
{
  cat /etc/os-release &> /dev/null
  [ $? == 0 ] && OS_VERSION=$(cat /etc/os-release | grep 'PRETTY_NAME' | cut -d '"' -f 2) || OS_VERSION=macOS
  echo ${OS_VERSION} | grep "Rocky" &> /dev/null && CRIO_OS_VER="CentOS_8_Stream"
  echo ${OS_VERSION} | grep "Ubuntu" &> /dev/null && CRIO_OS_VER="xUbuntu_22.04"
  echo ${OS_VERSION} | grep "Red Hat Enterprise Linux" &> /dev/null && CRIO_OS_VER="RHEL_8"
  echo ${OS_VERSION} | grep "Alpine Linux" &> /dev/null && CRIO_OS_VER="Alpine"
  echo ${OS_VERSION} | grep "macOS" &> /dev/null && CRIO_OS_VER="macOS"
  #dnf lock os version
  #[ "${CRIO_OS_VER}" == "CentOS_8_Stream" ] && ssh ${install_list} "cat /etc/os-release | cut -d '"' -f 2 | sudo tee /etc/yum/vars/releasever"
}
# ---

# Set variables
# Security settings
SELINUX_MODE=enforcing #disable | permissive | enforcing
FIREWALLD_ENABLE=disable #disable | enable

# Storage settings
CEPH_DISK="/dev/sdb"

# Network info
IP=$(ip a | grep -E 'en|eth' | grep 'inet' | awk '{ print $2 }' | cut -d '/' -f 1 | head -n 1)
NETID=$(ip a | grep 'en' | grep 'inet' | awk '{ print $2 }' | cut -d '.' -f 1-3 | head -n 1)
[ "${CRIO_OS_VER}" != "macOS" ] && GATEWAY=$(route -n | tr -s " " | grep '^0.0.0.0' | cut -d " " -f 2 | grep "${NETID}")
[ "${CRIO_OS_VER}" != "macOS" ] && NETMASK=$(route -n | grep 'en' | grep -w 'U' | awk '{ print $3 }')

[ "${CRIO_OS_VER}" == "macOS" ] && GATEWAY=$(netstat -nr | grep '^default' | grep "en[0-9]" | awk '{ print $2 }')
[ "${CRIO_OS_VER}" == "macOS" ] && NETMASK="??"

# Kube-VIP
VIP_TARGET=$(($(cat /etc/hosts | grep "${NETID}" | grep '\-m1' | awk '{ print $1 }' | cut -d '.' -f 4)-1))
KUBE_VIP="${NETID}.${VIP_TARGET}"
KUBE_INTERFACE=$(ip a | grep -B 3 "${IP}" | grep 'ens' | head -n 1 | awk '{ print $2 }' | sed 's/://g')
echo "${OS_VERSION}" | grep 'Rocky Linux 8' &> /dev/null
[ $? == 0 ] && NETWORK_UUID=$(cat /etc/sysconfig/network-scripts/ifcfg-${KUBE_INTERFACE} | grep 'UUID' | cut -d '=' -f 2)

# node & service
CP_NODES=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep "\-m" | tr -s '\n' ' ')
WK_NODES=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep "\-w" | tr -s '\n' ' ')
ALL_NODES=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep -E "\-m|\-w" | tr -s '\n' ' ')
ALL_NODES_EX_LOCALHOST=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep -E "\-m|\-w" | grep -v `hostname` | tr -s '\n' ' ')

# Text color setting
NC="\033[0m" # Color reset
BLACK="\033[0;30m"
RED="\033[0;31m"
GREEN="\033[0;32m"
YELLOW="\033[0;33m"
BLUE="\033[0;34m"
PURPLE="\033[0;35m"
CYAN="\033[0;36m"
WHITE="\033[0;37m"

#Package list
PACKAGE_LIST="cri-o kubelet kubeadm kubectl helm podman"
#Kubernetes project storageclass
STORAGE_CLASS="rook-ceph-block" #rook-ceph-block | local-path
CEPH_DASHBOARD_URL="ceph.k8s.org"

# Kubernetes projects namespace
NAMESPACE_0="kube-system"
NAMESPACE_1="local-path-storage"
NAMESPACE_2="metallb-system"
NAMESPACE_3="ingress-nginx"
NAMESPACE_4="jenkins"
NAMESPACE_5="quay"
NAMESPACE_6="gf" #grafana
NAMESPACE_7="landlord"
NAMESPACE_8="rook-ceph"
NAMESPACE_9="mariadb-galera"
# ---

# functions >>>

function setup-network-package()
{
  # Setup basic network package
  host-os-detection
  install=1
  [ "${CRIO_OS_VER}" == "CentOS_8_Stream" ] && which wget &> /dev/null && install=0
  [ "${CRIO_OS_VER}" == "RHEL_8" ] && CRIO_OS_VER="CentOS_8_Stream" && which wget &> /dev/null && install=0
  [ "${CRIO_OS_VER}" == "CentOS_8_Stream" ] && [ "${install}" == "1" ] && sudo dnf update -y && sudo dnf install -y --allowerasing dnf-command\(versionlock\) jq net-tools dnsutils nc wget && clear
  [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && install=2
  [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && which route &> /dev/null && install=0
  [ "${install}" == "2" ] && sudo apt-get update -qy && sudo apt-get install -qy net-tools iputils-ping dnsutils netcat && clear
  #[ "${CRIO_OS_VER}" == "macOS" ] &&
  host-os-detection  
}

