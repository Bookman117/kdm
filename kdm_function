  [ ${?} == 0 ] && [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && echo -e "[${GREEN}●${NC}] podman removed"
  [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && ssh ${remove_list} "which podman" &> /dev/null && status=1
