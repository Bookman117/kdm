# Purpose: kdm environment pre-setting & function setup.
# Create-Date: 2022-10-1
function set-environment-variable() 
{
  SSH_PORT='22'
  #DEBUG='/dev/null' #/dev/stdout
  CP_SUFFIX="\-m"
  WK_SUFFIX="\-w"
  source ~/bin/kdm_function &> /dev/null
  export KUBE_EDITOR='nano'
  LOG_OUTPUT_LEVEL="--v=5"
  
  #Package list
  PACKAGE_LIST="cri-o kubelet kubeadm kubectl helm podman"
  #Linux security settings
  SELINUX_MODE="enforcing" #disable | permissive | enforcing
  FIREWALLD_ENABLE="disable" #disable | enable
  
  #Linux package version control

  K8S_GPG_PATH="/etc/apt/keyrings/" #/usr/share/keyrings | /etc/apt/trusted.gpg.d
  GPG_PATH="/etc/apt/keyrings/" #/usr/share/keyrings | /etc/apt/trusted.gpg.d
  KUBE_DAEMON_PATH="/usr/lib/systemd/system/kubelet.service.d" #/etc/systemd/system/kubelet.service.d/
  POD_CIDR=172.16.0.0/17
  SVC_CIDR=172.16.128.0/17
  
  #Context setup
  CLUSTER_USER=bigred
  CLUSTER_NAME=UB22-T1
  INGRESSCLASS_NAME="ingress-1"
  
  #Kubernetes CNI
  CORE_DNS_DOMAIN=cluster.local #Previous: vattensoft.lab.com
  CNI_SOCK="/var/run/crio/crio.sock"
  
  #Kubernetes CSI
  ROOK_TAG=v1.12.8 #Previous: v1.12.2
  ROOK_GIT_RELEASE='release-1.12'
  STORAGE_CLASS="local-path" #rook-ceph-block | local-path
  CEPH_DASHBOARD_URL="ceph.${CORE_DNS_DOMAIN}"
  
  ECK_MASTER_NODE_COUNT=1
  ECK_DATA_NODES_COUNT=3
}

function set-version-variable() 
{
  #Docker
  HARBOR_VER=v2.8.0
  DOCKER_COMPOSE_VER=2.17.3

  HOLD_LIST="cri-o kubectl kubeadm kubelet helm podman skopeo crun runc"

  VER_CONTROL="sub"
  CRIO_RELEASE="1.28"
  CRIO_SUBVER="${CRIO_RELEASE}.1"
  KUBE_RELEASE="1.28"
  KUBE_SUBVER="${KUBE_RELEASE}.1"
  KUBE_INIT_VER="v${KUBE_SUBVER}"
  KUBE_REGISTRY=registry.k8s.io #registry.vattenlab.com/k8s
  [ "${OS_VER}" == "xUbuntu_22.04" ] && HELM_VER=$(sudo apt-cache madison helm | head -n 1 | awk '{ print $3 }')
  [ "${OS_VER}" == "xUbuntu_22.04" ] && PODMAN_VER=$(sudo apt-cache madison podman | head -n 1 | awk '{ print $3 }')
  [ "${OS_VER}" == "xUbuntu_22.04" ] && SKOPEO_VER=$(sudo apt-cache madison skopeo | head -n 1 | awk '{ print $3 }')

  #Kubernetes service
  METALLB_RELEASE=v0.13
  METALLB_VER=$(curl -m 2 -s https://github.com/metallb/metallb/releases.atom | grep "/releases/tag/${METALLB_RELEASE}" | cut -d '"' -f 6 | head -n 1 | cut -d '/' -f 8)
  METALLB_POOL_NAME=metal-1
  INGRESS_NGINX_VER=1.9.4 #Previous: 1.9.1
  INGRESS_NGINX_HELM_VER=4.8.3 #Previous: 4.8.1
  INGRESS_CLASS_NAME=ingress-1
  ECK_OP_VER=2.9.0
  ECK_VER=8.7.0

  LOCAL_PATH_VER=v0.0.25
  
  #Kubernetes CNI
  #KUBE_VIP_VER=v0.8.9
  KUBE_VIP_VER=$(curl -sL https://api.github.com/repos/kube-vip/kube-vip/releases | jq -r ".[0].name")
  CALICO_VER=v3.26.3 #Previous: v3.26.3
  FLANNEL_VER=v0.23.0 #Previous: v0.22.3

  #Kubernetes Monitoring
  METRICS_VER=3.11.0
  PROMETHEUSE_VER=52.1.0 #Previous: 47.0.0

  #Kubernetes tools
  K9S_RELEASE='v0.40'
  K9S_VERSION=$(curl -m 2 -s https://github.com/derailed/k9s/releases.atom | grep "/releases/tag/${K9S_RELEASE}" | cut -d '"' -f 6 | head -n 1 | cut -d '/' -f 8)
}

function set-text-color-variable()
{
  #Text color setting
  NC="\033[0m" #Color reset
  BLACK="\033[0;30m"
  RED="\033[0;31m"
  GREEN="\033[0;32m"
  YELLOW="\033[0;33m"
  BLUE="\033[0;34m"
  PURPLE="\033[0;35m"
  CYAN="\033[0;36m"
  WHITE="\033[0;37m"
}

function set-network-variable()
{
  #Network info
  IP=$(ip a | grep -E 'en|eth' | grep 'inet' | awk '{ print $2 }' | cut -d '/' -f 1 | head -n 1)
  NETID=$(ip a | grep 'en' | grep 'inet' | awk '{ print $2 }' | cut -d '.' -f 1-3 | head -n 1)
  [ "${OS_VER}" != "macOS" ] && GATEWAY=$(route -n | tr -s " " | grep '^0.0.0.0' | cut -d " " -f 2 | grep "${NETID}")
  [ "${OS_VER}" != "macOS" ] && NETMASK=$(route -n | grep 'en' | grep -w 'U' | awk '{ print $3 }')
  [ "${OS_VER}" == "macOS" ] && GATEWAY=$(netstat -nr | grep '^default' | grep "en[0-9]" | awk '{ print $2 }')
  [ "${OS_VER}" == "macOS" ] && NETMASK="??"

  #Kube-VIP
  VIP_TARGET=$(($(cat /etc/hosts | grep "${NETID}" | head -n 1 | awk '{ print $1 }' | cut -d '.' -f 4)-1))
  KUBE_VIP="${NETID}.${VIP_TARGET}"
  KUBE_INTERFACE=$(ip a | grep -B 3 "${IP}" | grep 'en' | head -n 1 | awk '{ print $2 }' | sed 's/://g')
  echo "${OS_VERSION}" | grep 'Rocky Linux 8' &> /dev/null
  [ ${?} == 0 ] && NETWORK_UUID=$(cat /etc/sysconfig/network-scripts/ifcfg-${KUBE_INTERFACE} | grep 'UUID' | cut -d '=' -f 2)
}

# Function to set variables for Kubernetes nodes and services
function kubernetes-node-variable()
{
  #Kubernetes control-plane nodes
  CP_NODES=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep -i "${CP_SUFFIX}" | tr -s '\n' ' ')
  #Kubernetes worker nodes
  WK_NODES=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep -i "${WK_SUFFIX}" | tr -s '\n' ' ')
  #Kubernetes all nodes
  ALL_NODES=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep -iE "${CP_SUFFIX}|${WK_SUFFIX}" | tr -s '\n' ' ')
  #Kubernetes all nodes without localhost
  ALL_NODES_EX_LOCALHOST=$(cat /etc/hosts | grep -vE '#|ip6' | grep "${NETID}" | awk '{ print $2 }' | grep -iE "${CP_SUFFIX}|${WK_SUFFIX}" | grep -v `hostname` | tr -s '\n' ' ')
}

function kubernetes-namespace-variable()
{
  #Kubernetes projects namespace
  KUBE_SYSTEM_NS="kube-system"
  LOCAL_PATH_NS="local-path-storage"
  MATELLB_NS="metallb-system"
  INGRESS_NGINX_NS="ingress-nginx"
  JENKINS_NS="jenkins"
  QUAY_NS="quay"
  GRAFANA_NS="grafana"
  LANDLORD_NS="landlord"
  ROOK_CEPH_NS="rook-ceph"
  MARIADB_GALERA_NS="mariadb-galera"
}

function host-os-detection()
{
  cat /etc/os-release &> /dev/null
  [ ${?} == 0 ] && OS_VERSION=$(cat /etc/os-release | grep 'PRETTY_NAME' | cut -d '"' -f 2) || OS_VERSION=macOS
  echo ${OS_VERSION} | grep "Rocky" &> /dev/null && OS_VER="CentOS_8_Stream"
  echo ${OS_VERSION} | grep "Ubuntu" &> /dev/null && OS_VER="xUbuntu_22.04"
  echo ${OS_VERSION} | grep "Red Hat Enterprise Linux" &> /dev/null && OS_VER="RHEL_8"
  echo ${OS_VERSION} | grep "Alpine Linux" &> /dev/null && OS_VER="Alpine"
  echo ${OS_VERSION} | grep "macOS" &> /dev/null && OS_VER="macOS"
  #dnf lock os version
  #[ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/os-release | cut -d '"' -f 2 | sudo tee /etc/yum/vars/releasever"
}

function check-kdm-path()
{
  ls ~/bin &> /dev/null
  [ ${?} != 0 ] && mkdir ~/bin
  ls ~/kdm/kdm &> /dev/null
  [ ${?} == 0 ] && mv ~/kdm/kdm ~/bin/
  ls ~/kdm/kdm_function &> /dev/null
  [ ${?} == 0 ] && mv ~/kdm/kdm_function ~/bin/
  ls ~/yaml &> /dev/null
  [ ${?} != 0 ] && mkdir ~/yaml
}

function setup-basic-package()
{
  # Setup basic package
  host-os-detection
  install='1'
  [ "${OS_VER}" == "CentOS_8_Stream" ] && which wget &> /dev/null && install='0'
  [ "${OS_VER}" == "RHEL_8" ] && OS_VER="CentOS_8_Stream" && which wget &> /dev/null && install='0'
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${install}" == "1" ] && sudo dnf update -y && sudo dnf install -y --allowerasing dnf-command\(versionlock\) jq net-tools dnsutils nc wget && clear
  [ "${OS_VER}" == "xUbuntu_22.04" ] && install='2'
  [ "${OS_VER}" == "xUbuntu_22.04" ] && which route &> /dev/null && install='0'
  [ "${install}" == "2" ] && sudo apt update -qy && sudo apt install -qy net-tools iputils-ping dnsutils netcat jq && clear
  #[ "${OS_VER}" == "macOS" ] &&
  host-os-detection  
}

function setup-password-control()
{
  source .passwd
}

function setup-pkg-version()
{
  set-environment-variable
  set-version-variable
  [ -z ${2} ] && echo -e "${RED}Please input parameter after ${YELLOW}\"set-ver\" [ check | latest | sub ]${NC}" && exit
  echo "${2}" | grep -vE 'latest|sub' &> /dev/null
  [ ${?} == 0 ] && echo -e "${RED}Please input parameter after ${YELLOW}\"set-ver\" [ check | latest | sub ]${NC}" && exit

  [ -z ${3} ] && [ "${2}" == "latest" ] && echo -e "${RED}Please input parameter after ${YELLOW}\"set-ver ${2}\" [0-9.0-99]${NC}" && exit
  [ -z ${3} ] && [ "${2}" == "sub" ] && echo -e "${RED}Please input parameter after ${YELLOW}\"set-ver ${2}\" [0-9.0-99.0-9]${NC}" && exit

  status=0
  [ "${2}" == "sub" ] && echo "${3}" | sed 's|^[0-9].[0-9][0-9].[0-9]||g' | grep '^$' &> /dev/null && status=1
  [ "${2}" == "sub" ] && [ "${status}" == "0" ] && echo -e "${RED}Please input parameter after ${YELLOW}\"set-ver ${2}\" [0-9.0-99.0-9]${NC}" && exit

  [ "${2}" == "latest" ] && echo "${3}" | sed 's|^[0-9].[0-9][0-9]||g' | grep '^$' &> /dev/null && status=1
  [ "${2}" == "latest" ] && [ "${status}" == "0" ] && echo -e "${RED}Please input parameter after ${YELLOW}\"set-ver ${2}\" [0-9.0-99]${NC}" && exit

  v1=$(echo ${3} | cut -d '.' -f 1-2)
  v2=$(echo ${3} | cut -d '.' -f 3)
  echo ${3} | cut -d '.' -f 3 | grep [0-9] &> /dev/null
  [ ${?} != 0 ] && v2=0

  sed -i "s|CRIO_RELEASE=\"\${CRIO_RELEASE}\"|CRIO_RELEASE=\"${v1}\"|g" ~/bin/kdm_function
  sed -i "s|CRIO_SUBVER=\"\${CRIO_RELEASE}.*\"|CRIO_SUBVER=\"\${CRIO_RELEASE}.${v2}\"|g" ~/bin/kdm_function
  sed -i "s|KUBE_RELEASE=\"\${KUBE_RELEASE}\"|KUBE_RELEASE=\"${v1}\"|g" ~/bin/kdm_function
  sed -i "s|KUBE_SUBVER=\"\${KUBE_RELEASE}.*\"|KUBE_SUBVER=\"\${KUBE_RELEASE}.${v2}\"|g" ~/bin/kdm_function
  sed -i "s|^VER_CONTROL=[a-z]*|VER_CONTROL=${2}|g" ~/bin/kdm_function
  cat ~/bin/kdm_function | grep -E "${v1}|${2}" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Version setting is completed"
}

function check-crio-available-version()
{
  crio_release_check=$(curl -s "https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/" | grep 'class="name"' | sort -r | cut -d '"' -f 4 | grep ':/' | head -n 3 | cut -d '/' -f 2 | tr -d ':')
  for release_list in ${crio_release_check}
    do
      echo -e "Target release: ${YELLOW}${release_list}${NC}"
      crio_sub_ver=$(curl -s "https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${release_list}:/" | grep 'class="name"' | sort -r | cut -d '"' -f 4 | cut -d '/' -f 2)
      for sub_list in ${crio_sub_ver}
        do
          echo -e " [${GREEN}●${NC}] ${sub_list}"
        done
    done
}

function start-info()
{
  node-selector hosts
  # Kubernetes basic info
  which kubectl &> /dev/null
  [ ${?} == 0 ] && KUBE_AGE=$(kubectl get nodes 2> /dev/null | grep -i `hostname | tr '[A-Z]' '[a-z]'` | awk '{ print $4 }') || echo "Checking node status..."
  for install_list in ${CP_NODE_SELECTOR} ${WK_NODE_SELECTOR}
    do
      nc -z -w 1 ${install_list} 10250 > /dev/null 2>&1
      [ ${?} == 0 ] && status=1 || status=0
      [ "${status}" == "1" ] && cluster_list=$(ssh -p ${SSH_PORT} ${install_list} kubectl get nodes 2> /dev/null | tail -n +2 | cut -d " " -f 1 | tr -s '\n' ' ') && cluster_ver=$(ssh -p ${SSH_PORT} ${install_list} kubectl get nodes 2> /dev/null | grep "${CP_SUFFIX}" | awk '{ print $5}' | head -n 1) && break
      [ "${status}" == "0" ] && continue
    done

  nc -z -w 1 `hostname` 10250 > /dev/null 2>&1
  [ ${?} != 0 ] && meassage="\t| ${RED}This node not activate.${NC}" && cluster_ver="--" && KUBE_AGE="--"
  if [ "${status}" == "1" ]
    then
      echo -e "${GREEN}●${NC} Kubernetes deployed\t| ${cluster_ver} | `hostname | tr '[A-Z]' '[a-z]'` node age: ${GREEN}${KUBE_AGE}${NC}"
      #show nodes info
      echo -e "  ├─ Active nodes${meassage}"
      echo ${cluster_list} | grep "${CP_SUFFIX}" &> /dev/null
      [ ${?} == 0 ] && echo -e "  │  ├─ control-plane\t| ${GREEN}`echo ${cluster_list} | tr -s ' ' '\n' | grep "${CP_SUFFIX}" | tr -s '\n' ' '`${NC}" || echo -e "  │  ├─ control-plane\t| --"
      echo ${cluster_list} | grep "${WK_SUFFIX}" &> /dev/null
      [ ${?} == 0 ] && echo -e "  │  └─ worker\t\t| ${GREEN}`echo ${cluster_list} | tr -s ' ' '\n' | grep "${WK_SUFFIX}" | tr -s '\n' ' '`${NC}" || echo -e "  │  └─ worker\t\t| --"
      #show storageclass info
      storageclass_quantity=$(kubectl get storageclass -A 2> /dev/null | tail -n +2 | wc -l)
      storageclass_list=$(kubectl get storageclass -A 2> /dev/null | tail -n +2 | awk '{ print $1 }' | tr -s '\n' ' ' | sed 's/.$//')
      echo "${storageclass_quantity}" | grep '^0' &> /dev/null
      [ ${?} == 0 ] && echo -e "  ├─ StorageClass\t| ${YELLOW}Not deploy"${NC} || \
      for list in ${storageclass_list}
        do
          echo -e "  ├─ StorageClass\t| ${GREEN}deployed: ${list}${NC}"
        done
      #show controller info
      kubectl get pods -n metallb-system 2> /dev/null  | tail -n +2 | awk '{ print $2,$3 }' | grep '1/1 Running' &> /dev/null
      [ ${?} == 0 ] && echo -e "  ├─ Controller\t\t| ${GREEN}deployed: metallb${NC}" || echo -e "  ├─ Controller\t\t| ${YELLOW}Not deploy: metallb${NC}"
      kubectl get pods -n ingress-nginx 2> /dev/null  | grep 'ingress-nginx-controller*' | awk '{ print $2,$3 }' | grep '1/1 Running' &> /dev/null
      [ ${?} == 0 ] && echo -e "  ├─ Controller\t\t| ${GREEN}deployed: ingress-nginx${NC}" || echo -e "  ├─ Controller\t\t| ${YELLOW}Not deploy: ingress-nginx${NC}"
      #show monitoring info
      #kubectl get pods -A | grep 'metrics' &> /dev/null
      kubectl get pods -n kube-system 2> /dev/null  | grep '^metrics' | awk '{ print $2,$3 }' | grep '1/1 Running' &> /dev/null
      [ ${?} == 0 ] && echo -e "  ├─ Monitoring\t\t| ${GREEN}deployed: metrics${NC}" || echo -e "  ├─ Monitoring\t\t| ${YELLOW}Not deploy: metrics${NC}"
      #kubectl get pods -A | grep 'prometheus' &> /dev/null
      kubectl get pods -n monitoring 2> /dev/null | grep 'kube-prometheus' | awk '{ print $2,$3 }' | grep -E '1/1 Running|2/2 Running|3/3 Running' &> /dev/null
      [ ${?} == 0 ] && echo -e "  └─ Monitoring\t\t| ${GREEN}deployed: prometheus${NC}" || echo -e "  └─ Monitoring\t\t| ${YELLOW}Not deploy: prometheus${NC}"
      #echo -e "${YELLOW}\nInput parameter \"help\" display more information.${NC}"
    else
      echo "${CP_NODES}" | grep -i "`hostname`" &> /dev/null
      [ $? != 0 ] && CP_NODES="--" && WK_NODES="--"
      echo -e "${YELLOW}●${NC} Kubernetes not detected"
      echo -e "  └─ Nodes plan list"
      echo -e "     ├─ control-plane\t| ${YELLOW}`echo -e "${CP_NODES}"`${NC}"
      echo -e "     └─ worker nodes\t| ${YELLOW}`echo ${WK_NODES}`${NC}"
      #echo -e "${YELLOW}\nInput parameter \"help\" display more information.${NC}"
  fi
}

function crio-available-version-check()
{
  set-environment-variable
  set-version-variable
  count=0
  cat /dev/null > /tmp/CRIO_ALL_VERSION
  while [ ${count} -le 9 ]
    do
      list="${CRIO_RELEASE}.${count}"
      echo -n "${list} " >> /tmp/CRIO_ALL_VERSION
      count=$((${count}+1))
    done
  echo "${VER_CONTROL}" | grep "latest"  &> /dev/null
  [ ${?} == 0 ] && CRIO_ALL_VERSION=${CRIO_SUBVER} || CRIO_ALL_VERSION=`cat /tmp/CRIO_ALL_VERSION | sed /\n/d`
  
  cat /dev/null > /tmp/CRIO_AVL_VER
  for list in ${CRIO_ALL_VERSION}
    do
      curl -s https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}:/${list}/${OS_VER}/Release.key | grep 'BEGIN PGP PUBLIC KEY BLOCK' &> /dev/null
      [ ${?} == 0 ] && echo -n "${list} " >> /tmp/CRIO_AVL_VER && echo -e " [${GREEN}●${NC}] cri-o version: ${list} is available"
    done
  CRIO_AVL_VER=`cat /tmp/CRIO_AVL_VER 2> /dev/null | sed /\n/d`
}

function show-version-control()
{
  source ~/bin/kdm &> /dev/null && set-environment-variable; set-version-variable; kubernetes-node-variable
  CRIO_AVL_VER=`cat /tmp/CRIO_AVL_VER 2> /dev/null | sed /\n/d`
  echo "${CRIO_AVL_VER}" | grep -v [0-9] &> /dev/null
  [ ${?} == 0 ] && CRIO_AVL_VER="Unconfirmed [Configure with set-var parameter]"
  echo -e "${YELLOW}Variable list${NC}"
  echo -e " > VER_CONTROL     \t | ${YELLOW}${VER_CONTROL}${NC}"
  echo -e " > OS_VERSION      \t | ${YELLOW}${OS_VERSION}${NC}"
  echo -e " > OS_VER          \t | ${YELLOW}${OS_VER}${NC}"
  echo -e " > CRIO_AVL_VER    \t | ${YELLOW}${CRIO_AVL_VER}${NC}"
  echo -e " > CRIO_RELEASE    \t | ${YELLOW}${CRIO_RELEASE}${NC}"
  echo -e " > CRIO_SUBVER     \t | ${YELLOW}${CRIO_SUBVER}${NC}"
  echo -e " > HELM_VER        \t | ${YELLOW}${HELM_VER}${NC}"
  echo -e " > PODMAN_VER      \t | ${YELLOW}${PODMAN_VER}${NC}"
  echo -e " > KUBE_RELEASE    \t | ${YELLOW}${KUBE_RELEASE}${NC}"
  echo -e " > KUBE_SUBVER     \t | ${YELLOW}${KUBE_SUBVER}${NC}"
  echo -e " > KUBE_VIP        \t | ${YELLOW}${KUBE_VIP}${NC}"
  echo -e " > KUBE_INTERFACE  \t | ${YELLOW}${KUBE_INTERFACE}${NC}"
  echo -e " > POD_CIDR        \t | ${YELLOW}${POD_CIDR}${NC}"
  echo -e " > SVC_CIDR        \t | ${YELLOW}${SVC_CIDR}${NC}"
  echo "====="
  echo -e " > CORE_DNS_DOMAIN \t | ${YELLOW}${CORE_DNS_DOMAIN}${NC}"
  echo -e " > CLUSTER_USER    \t | ${YELLOW}${CLUSTER_USER}${NC}"
  echo -e " > CLUSTER_NAME    \t | ${YELLOW}${CLUSTER_NAME}${NC}"
  echo -e " > KUBE_INIT_VER   \t | ${YELLOW}${KUBE_INIT_VER}${NC}"
  echo -e " > LOCAL_PATH_VER  \t | ${YELLOW}${LOCAL_PATH_VER}${NC}"
  echo -e " > METRICS_VER     \t | ${YELLOW}${METRICS_VER}${NC}"
  echo -e " > PROMETHEUSE_VER \t | ${YELLOW}${PROMETHEUSE_VER}${NC}"
  echo -e " > CALICO_VER      \t | ${YELLOW}${CALICO_VER}${NC}"
  echo -e " > ROOK_GIT_RELEASE\t | ${YELLOW}${ROOK_GIT_RELEASE}${NC}"
  echo -e " > ROOK_TAG        \t | ${YELLOW}${ROOK_TAG}${NC}"
  echo -e " > ECK_OP_VER      \t | ${YELLOW}${ECK_OP_VER}${NC}"
  echo -e " > ECK_VER         \t | ${YELLOW}${ECK_VER}${NC}"
  echo -e " > ECK_VER         \t | ${YELLOW}${ECK_VER}${NC}"
  echo -e " > ECK_MASTER_NODE \t | ${YELLOW}${ECK_MASTER_NODE_COUNT}${NC}"
  echo -e " > ECK_DATA_NODES  \t | ${YELLOW}${ECK_DATA_NODES_COUNT}${NC}"
  echo -e " > STORAGE_CLASS   \t | ${YELLOW}${STORAGE_CLASS}${NC}"
  echo "====="
  echo -e " > SELINUX_MODE    \t | ${YELLOW}${SELINUX_MODE}${NC}"
  echo -e " > IP              \t | ${YELLOW}${IP}${NC}"
  echo -e " > NETID           \t | ${YELLOW}${NETID}${NC}"
  echo -e " > GATEWAY         \t | ${YELLOW}${GATEWAY}${NC}"
  echo -e " > NETMASK         \t | ${YELLOW}${NETMASK}${NC}"
  echo -e " > CP_SUFFIX       \t | ${YELLOW}${CP_SUFFIX}${NC}"
  echo -e " > WK_SUFFIX       \t | ${YELLOW}${WK_SUFFIX}${NC}"
  echo -e " > CP_NODES        \t | ${YELLOW}${CP_NODES}${NC}"
  echo -e " > WK_NODES        \t | ${YELLOW}${WK_NODES}${NC}"
}

function system-check()
{
  [ -z ${2} ] && node-message ${@} && exit
  #[ -z ${2} ] && node-selector hosts
  node-selector ${@}

  for install_list in ${CP_NODE_SELECTOR} ${WK_NODE_SELECTOR}
    do
      echo -e "${YELLOW}${install_list} | System status${NC}"
      nc -z -w 1 ${install_list} 22 > /dev/null 2>&1
      [ ${?} != 0 ] && echo -e " [${RED}●${NC}] ${install_list} This node not available\n" && continue
      #modules
      sys_modules=$(ssh -p ${SSH_PORT} ${install_list} lsmod | awk '{ print $1 }' | grep -E 'br_netfilter|overlay' | sed ":a;N;s/\n/ | /g")
      echo -e " [${GREEN}●${NC}] modules:\t\t${sys_modules}"
      #SELinux
      status=0
      [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'disabled'" &> /dev/null && echo -e " [${GREEN}●${NC}] SELinux\t\tdisabled" && status=1
      [ "${status}" == "0" ] && [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'enabled'" &> /dev/null && se_status=$(ssh -p ${SSH_PORT} ${install_list} sudo sestatus | grep 'Current mode:' | awk '{ print $3 }') && echo -e " [${YELLOW}●${NC}] SELinux:\t\t${se_status}"
      [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'disabled'" &> /dev/null && echo -e " [${GREEN}●${NC}] SELinux disabled"
      [ "${status}" == "0" ] && [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'enabled'" &> /dev/null && se_status=$(ssh -p ${SSH_PORT} ${install_list} sudo sestatus | grep 'Current mode:' | awk '{ print $3 }') && echo -e " [${YELLOW}●${NC}] SELinux:\t\t${se_status}"
      #firewalld
      [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo systemctl status firewalld | grep 'active (running)'" &> /dev/null && echo -e " [${YELLOW}●${NC}] firewalld:\t\tnot disable"
      [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo systemctl status firewalld | grep 'inactive (dead)'" &> /dev/null && echo -e " [${GREEN}●${NC}] firewalld:\t\tdisabled"
      [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo systemctl status firewalld | grep 'active (running)'" &> /dev/null && echo -e " [${YELLOW}●${NC}] firewalld:\t\tnot disable"
      [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo systemctl status firewalld | grep 'inactive (dead)'" &> /dev/null && echo -e " [${GREEN}●${NC}] firewalld:\t\tdisabled"
      #swap
      ssh -p ${SSH_PORT} ${install_list} "sudo swapon --show | grep '/dev'" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${GREEN}●${NC}] swap:\t\tdisabled" || echo -e " [${RED}●${NC}] swap\t\tnot disable"
      #ipv4 forward
      forward=$(ssh -p ${SSH_PORT} ${install_list} "cat /proc/sys/net/bridge/bridge-nf-call-iptables 2> /dev/null")
      [ "${forward}" == "1" ] && echo -e " [${GREEN}●${NC}] ipv4_forward:\tenabled" || echo -e " [${YELLOW}●${NC}] ipv4 ip_forward\tnot enable."
      echo
    done
}

function system-info()
{
  if [ "${OS_VERSION}" == "macOS" ]
    then
      #Variable
      GATEWAY=$(netstat -nr | grep '^default' | grep "en1" | awk '{ print $2 }')
      IP=$(Ipconfig getifaddr en1)
      NETID=${IP%.*}

      #Program
      #system information
      echo "[System]" | sudo tee /tmp/sinfo

      os_name=$(echo $(sw_vers | tr -s " " "-" | awk '{ print $2 }' | sed 's/Mac-OS-X/macOS X/g'))
      echo " OS Version: $os_name" | sudo tee -a /tmp/sinfo
      echo " Hostname: `hostname`" | sudo tee -a /tmp/sinfo

      m_size=$(($(sysctl hw.memsize | awk '{ print $2 }')/1073741824))
      echo " Memory: ${m_size}G" | sudo tee -a /tmp/sinfo

      cpu_name=$(sysctl -a | grep brand_string | tr -s ' ' '-' | cut -d '-' -f 2-8 | tr -s '-' ' ' | sed 's/(R)//g; s/(TM)//g')
      cpu_number=$(sysctl -a | grep core_count | awk '{ print $2 }')
      echo " CPU: $cpu_name (core: $cpu_number)" | sudo tee -a /tmp/sinfo

      d=$(sudo df -h | grep -w '/' | awk '{ print $2 }' | sed 's/i//g')
      echo " Disk: $d" | sudo tee -a /tmp/sinfo
      echo "" | sudo tee -a /tmp/sinfo

      #network information
      echo "[Network]" | sudo tee -a /tmp/sinfo
      echo " IP: $IP" | sudo tee -a /tmp/sinfo
      echo " Gateway: $GATEWAY" | sudo tee -a /tmp/sinfo
      for list in $(cat /etc/resolv.conf | grep '^nameserver' | awk '{ print $2 }')
        do
          echo " nameserver: ${list}" | sudo tee -a /tmp/sinfo
        done

      ping -c 1 www.hinet.net >> /dev/null
      [ "${?}" == "0" ] && echo -e " Internet access: ${GREEN}Granted${NC}" || echo -e " Internet: ${RED}Denied{NC}" | sudo tee -a /tmp/sinfo
    else
      #system information
      #OS information
      os_name=`cat /etc/os-release | grep 'PRETTY_NAME' | cut -d '"' -f 2`
      
      #cpu information
      cpu_name=$(sudo cat /proc/cpuinfo | grep 'model name' | head -n 1 | cut -d ':' -f2 | tr -s '-' ' ' | sed 's/(R)//g; s/(TM)//g; s/@ //g' | sed 's/^.//')
      core_number=$(sudo cat /proc/cpuinfo | grep 'model name' | wc -l)
      cpu_architecture=$(uname -m)

      #memory information
      sudo free -mh | grep Mem: | awk '{ print $2 }' | grep 'Gi' &> /dev/null
      [ ${?} == 0 ] && byte=GB || byte=MB
      m_size=$(sudo free -mh | grep Mem: | awk '{ print $2 }' | sed 's/Gi//g')
      Gi_to_GB=$(awk "BEGIN { print $m_size / .93 }")

      #Display info
      echo -e "[ System ]"
      #OS information
      echo -e "  - OS Version:\t\t| ${YELLOW}$os_name${NC}"
      echo -e "  - Hostname:\t\t| ${YELLOW}`hostname`${NC}"
      echo -e "  - CPU:\t\t| ${YELLOW}$cpu_name (core: $core_number) | ${cpu_architecture}${NC}"
      echo -e "  - Memory:\t\t| ${YELLOW}${Gi_to_GB} ${byte}${NC}"

      #disk information
      #disk_list=$(sudo fdisk -l | grep '^Disk' | grep 'sd' | grep 'bytes' | awk '{ print $2 }' | sed 's/://g;s/\/dev\///g' | tr -s '\n' ' ' | sed 's/.$//')
      disk_list=$(lsblk | grep "sd[a-z]" | grep -v "sd[a-z][0-9]" | awk '{ print $1 }' | sed ':a;N;$!ba;s/\n/ /g')
      echo -e "  - Disk list:\t\t| ${YELLOW}${disk_list}${NC}"
      for disk_list in ${disk_list}
        do
          disk_capacity=$(lsblk | grep ${disk_list} | grep -v "sd[a-z][0-9]" | awk '{ print $4 }' | sed "s/[A-Z]//g")
          disk_type=$(sudo fdisk -l 2> /dev/null | grep -A 1 "^Disk /dev/${disk_list}:" | grep '^Disk model' | cut -d ':' -f 2 | sed 's/^.//' | sed 's/[[:space:]]*$//')

          echo -e "    > Disk name:\t| ${YELLOW}${disk_list} [ ${disk_type} ] ${NC}"
          echo "${disk_list}" | grep "sda" &> /dev/null && disk_list="mapper/ubuntu--vg*"

          disk_usage=$(df -h /dev/${disk_list} | awk '{ print $3 }' | sed '1d' | sed "s/[A-Z]//g")
          disk_avail=$(df -h /dev/${disk_list} | awk '{ print $4 }' | sed '1d' | sed "s/[A-Z]//g")
          disk_percentage=$(awk "BEGIN { pc=100*${disk_usage}/${disk_capacity}; i=int(pc); print (pc-i<0.5)?i:i+1 }")

          echo -e "    > Disk capacity:\t| ${YELLOW}${disk_capacity} ${byte}${NC}"
          echo -e "    > Disk usage:\t| ${YELLOW}${disk_usage} ${byte} [ ${disk_percentage}% ] ${NC}"
          #echo -e " - ${disk_list} | Size: ${YELLOW}${Size}${NC} | Used: ${YELLOW}${Used}${NC} | Avail: ${YELLOW}${Avail}${NC}"
          #sudo fdisk -l | grep '^Disk' | grep 'bytes' | grep "${disk_list}" | grep -E 'GB|GiB' &> /dev/null
          #[ ${?} == 0 ] && byte=GB || byte=MB
          #disk_capacity=$(sudo fdisk -l 2> /dev/null | grep '^Disk' | grep 'bytes' | grep "${disk_list}" | awk '{ print $3 }')
          #disk_usage=$(sudo du -ch / 2> /dev/null | grep 'total' | awk '{ print $1 }' | tr -s 'GM' ' ')
          #sudo du -ch / 2> /dev/null | grep 'total' | awk '{ print $1 }' | grep 'G' &> /dev/null
          #[ ${?} == 0 ] && disk_usage=$(sudo du -ch / 2> /dev/null | grep 'total' | awk '{ print $1 }' | tr -s 'GM' ' ') || disk_usage=$(awk "BEGIN { print $disk_usage / 1024 }")
          #echo "  ---"
        done
      #network information
      echo "[ Network ]"
      echo -e "  - IP Address:\t\t| ${YELLOW}${IP}${NC}"
      echo -e "  - Gateway:\t\t| ${YELLOW}${GATEWAY}${NC}"

      for list in $(cat /etc/resolv.conf | grep '^nameserver' | awk '{ print $2 }')
        do
          echo -e "  - Nameserver:\t\t| ${YELLOW}${list}${NC}"
        done

      ping -c 1 www.hinet.net &> /dev/null
      [ "${?}" == "0" ] && echo -e "  - Internet access:\t| ${GREEN}Granted${NC}" || echo -e "  - Internet:\t\t| ${RED}Denied${NC}"
  fi
}

function system-swapoff()
{
  #swapoff
  ssh -p ${SSH_PORT} ${install_list} "sudo swapoff -a" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && swap=1 && swap_list=$(echo ${install_list} | cut -d '-' -f 2-3 | sed 's|-|--|g')
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/fstab | grep "/dev/mapper/rhel_rhel8--${swap_list}-swap"" &> /dev/null && swap=0
  [ "${OS_VER}" == "RHEL_8" ] && echo ${swap} | grep '1' &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i '/swap/d' /etc/fstab"

  [ "${OS_VER}" == "CentOS_8_Stream" ] && swap=1
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/fstab | grep '#/dev/mapper/rl-swap'" &> /dev/null && swap=0
  [ "${OS_VER}" == "CentOS_8_Stream" ] && echo ${swap} | grep '1' &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's|/dev/mapper/rl-swap|#/dev/mapper/rl-swap|g' /etc/fstab"
  
  [ "${OS_VER}" == "xUbuntu_22.04" ] && swap=1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "ls -al /swap.img" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo rm /swap.img" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/fstab | grep '#/swap.img'" &> /dev/null && swap=0
  [ "${OS_VER}" == "xUbuntu_22.04" ] && echo ${swap} | grep '1' &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's|/swap.img|#/swap.img|g' /etc/fstab" &> /dev/null
  
  ssh -p ${SSH_PORT} ${install_list} "sudo swapon --show | grep '/dev'" &> /dev/null
  [ ${?} != 0 ] && echo -e " [${GREEN}●${NC}] System\t| swap disabled" || echo -e " [${RED}●${NC}] System\t| swap not disable"
}

function system-selinux()
{
  #SELinux setting
  status=0
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo setenforce 0" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i "/^SELINUX=/c\SELINUX=${SELINUX_MODE}" /etc/selinux/config"
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo nmcli connection modify ${KUBE_INTERFACE} ipv6.method ignore"
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'disabled'" &> /dev/null && echo -e " [${GREEN}●${NC}] System\t| SELinux disabled" && status=1
  [ "${status}" == "0" ] && [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'enabled'" &> /dev/null && se_status=$(ssh -p ${SSH_PORT} ${install_list} sudo sestatus | grep 'Current mode:' | awk '{ print $3 }') && echo -e " [${YELLOW}●${NC}] System\t| SELinux mode: ${YELLOW}${se_status}${NC}"

  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo setenforce 0" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i "/^SELINUX=/c\SELINUX=${SELINUX_MODE}" /etc/selinux/config"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo nmcli connection modify ${KUBE_INTERFACE} ipv6.method ignore"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'disabled'" &> /dev/null && echo -e " [${GREEN}●${NC}] System\t| SELinux disabled"
  [ "${status}" == "0" ] && [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sestatus | grep 'SELinux status:' | grep 'enabled'" &> /dev/null && se_status=$(ssh -p ${SSH_PORT} ${install_list} sudo sestatus | grep 'Current mode:' | awk '{ print $3 }') && echo -e " [${YELLOW}●${NC}] System\t| SELinux mode: ${YELLOW}${se_status}${NC}"
}

function system-firewalld()
{
  #firewalld setup
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} 'sudo systemctl status firewalld | grep "active (running)"' &> /dev/null && status=1
  [ "${OS_VER}" == "RHEL_8" ] && echo ${status} | grep '1' &>/dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo systemctl ${FIREWALLD_ENABLE} firewalld --now" &> /dev/null && echo -e " [${GREEN}●${NC}] System\t| firewalld disabled [ need reboot ]"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} 'sudo systemctl status firewalld | grep "active (running)"' &> /dev/null && status=1
  [ "${OS_VER}" == "CentOS_8_Stream" ] && echo ${status} | grep '1' &>/dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo systemctl ${FIREWALLD_ENABLE} firewalld --now" &> /dev/null && echo -e " [${GREEN}●${NC}] System\t| firewalld disabled [ need reboot ]"
  #[ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} 'sudo systemctl status firewalld | grep "inactive (dead)"' &> /dev/null &&  echo -e " [${YELLOW}●${NC}] firewalld not disable"
  #firewalld setup（enable）
  #[ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y iproute-tc &> /dev/null"
  # kubelet API | kube-scheduler | kube-controller-manager | NodePort Services | apply changes
  #[ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo firewall-cmd --permanent --add-port=6443/tcp &> /dev/null"
  #[ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo firewall-cmd --permanent --add-port=2379-2380/tcp &> /dev/null"
  #[ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo firewall-cmd --permanent --add-port=10250/tcp &> /dev/null"
  #[ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo firewall-cmd --permanent --add-port=10251/tcp &> /dev/null"
  #[ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo firewall-cmd --permanent --add-port=10252/tcp &> /dev/null"
  #[ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo firewall-cmd --reload &> /dev/null"
}

function system-modules()
{
  #modules setup
  modules=1
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo modprobe br_netfilter" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo modprobe overlay" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/modules-load.d/crio.conf | grep -E 'overlay|br_netfilter'" &> /dev/null && modules=0
  [ "${OS_VER}" == "RHEL_8" ] && echo "${modules}" | grep '1' &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "echo "overlay" | sudo tee -a /etc/modules-load.d/crio.conf" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "echo "br_netfilter" | sudo tee -a /etc/modules-load.d/crio.conf" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/modules-load.d/crio.conf | grep -E 'overlay|br_netfilter'" &> /dev/null && echo -e " [${GREEN}●${NC}] System\t| modules ${YELLOW}br_netfilter | overlay${NC} enabled"

  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo modprobe br_netfilter" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo modprobe overlay" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/modules-load.d/crio.conf | grep -E 'overlay|br_netfilter'" &> /dev/null && modules=0
  [ "${OS_VER}" == "CentOS_8_Stream" ] && echo "${modules}" | grep '1' &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "echo "overlay" | sudo tee -a /etc/modules-load.d/crio.conf" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "echo "br_netfilter" | sudo tee -a /etc/modules-load.d/crio.conf" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/modules-load.d/crio.conf | grep -E 'overlay|br_netfilter'" &> /dev/null && echo -e " [${GREEN}●${NC}] System\t| modules ${YELLOW}br_netfilter | overlay${NC} enabled"
        
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo modprobe br_netfilter" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo modprobe overlay" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/modules | grep -E 'overlay|br_netfilter'" &> /dev/null && modules=0
  [ "${OS_VER}" == "xUbuntu_22.04" ] && echo "${modules}" | grep '1' &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "echo "overlay" | sudo tee -a /etc/modules" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "echo "br_netfilter" | sudo tee -a /etc/modules" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/modules | grep -E 'overlay|br_netfilter'" &> /dev/null && echo -e " [${GREEN}●${NC}] System\t| modules ${YELLOW}br_netfilter | overlay${NC} enabled"
}

function system-enable-ipv4-forward()
{
  #ipv4_forward setup
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's|#net.ipv4.ip_forward=1|net.ipv4.ip_forward = 1|g' /etc/sysctl.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/sysctl.conf | grep 'net.ipv4.ip_forward = 1'" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "net.ipv4.ip_forward = 1" | sudo tee -a /etc/sysctl.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/sysctl.conf | grep 'net.bridge.bridge-nf-call-iptables = 1'" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "net.bridge.bridge-nf-call-iptables = 1" | sudo tee -a /etc/sysctl.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/sysctl.conf | grep 'net.ipv4.conf.default.rp_filter = 1'" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "net.ipv4.conf.default.rp_filter = 1" | sudo tee -a /etc/sysctl.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/sysctl.conf | grep 'net.ipv4.conf.all.rp_filter = 1'" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "net.ipv4.conf.all.rp_filter = 1" | sudo tee -a /etc/sysctl.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "sudo sysctl -p /etc/sysctl.conf" &> /dev/null
  echo -e " [${GREEN}●${NC}] System\t| ipv4_forward enabled"
}

function system-disable-ipv6()
{
  #disable ipv6
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/sysctl.conf | grep 'net.ipv6.conf.all.disable_ipv6 = 1'" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "net.ipv6.conf.all.disable_ipv6 = 1" | sudo tee -a /etc/sysctl.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/sysctl.conf | grep 'net.ipv6.conf.default.disable_ipv6 = 1'" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "net.ipv6.conf.default.disable_ipv6 = 1" | sudo tee -a /etc/sysctl.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "sudo sysctl --system 2> /dev/null | grep 'net.ipv4.ip_forward'" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && echo -e " [${GREEN}●${NC}] System\t| ipv6 disabled"

  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} 'sed "s|GRUB_CMDLINE_LINUX=\"\"|GRUB_CMDLINE_LINUX=\"ipv6.disable=1\"|g" /etc/default/grub | sudo tee /etc/default/grub' &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo update-grub" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && echo -e " [${GREEN}●${NC}] System\t| ipv6 disabled"
}

function interrupt()
{
  echo
  [ ${#} == 0 ] || echo -e "${@}"
  read -s -n1 -p "$(echo -e ${RED}Press 'N/n' to stop, other key to continue.${NC})" ans; echo -e "\n"
  case ${ans} in
  n|N)
    echo -e "${RED}Interrupted!${NC}"; exit
    ;;
  *)
    ;;
  esac
}

function node-selector()
{
  echo "${@}" | grep -wE "hosts|local" &> /dev/null
  [ ${?} != 0 ] && [ -z ${2} ] && node-message ${@} && exit
  list=$(echo "${CP_NODES}${WK_NODES}" | sed 's/ /|/g' | sed 's/.$//')
  parameter=${@}
  test=${1}
  while true
    do
      echo "${1}" | grep -vwE "hosts|local|cp|wk|${list}" &> /dev/null
      [ ${?} == 0 ] && shift || break
    done

  echo ${@} | sed 's/ /\n/g' | grep -vwE "${list}" &> /dev/null
  [ ${?} == 0 ] && status=3 || status=2
  echo ${@} | grep -w "hosts" &> /dev/null
  [ ${?} == 0 ] && status=0
  echo ${@} | grep -w "local" &> /dev/null
  [ ${?} == 0 ] && status=1
  echo ${@} | grep -w "cp" &> /dev/null
  [ ${?} == 0 ] && status=4
  echo ${@} | grep -w "wk" &> /dev/null
  [ ${?} == 0 ] && status=5

  if [ "${status}" == "0" ]
    then
      list=$(echo "${CP_NODES} ${WK_NODES}")
      CP_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep -i "${CP_SUFFIX}" | tr -s '\n' ' ')
      WK_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep -i "${WK_SUFFIX}" | tr -s '\n' ' ')
  elif [ "${status}" == "1" ]
    then
      list=$(hostname)
      CP_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep -i "${CP_SUFFIX}" | tr -s '\n' ' ')
      WK_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep -i "${WK_SUFFIX}" | tr -s '\n' ' ')
  elif [ "${status}" == "2" ]
    then
      list=${@}
      CP_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep -i "${CP_SUFFIX}" | tr -s '\n' ' ')
      WK_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep -i "${WK_SUFFIX}" | tr -s '\n' ' ')
  elif [ "${status}" == "3" ]
    then
      parameter=$(echo ${parameter} | sed 's/ /\n/g' | grep -v ${test} | sed ":a;N;s/\\n/ /g;ta")
      echo -e "${YELLOW} \"${parameter}\" ${NC}is not effective parameter!"
      echo -e "${RED} Please check out hostname list: ${YELLOW}${ALL_NODES}${NC},${RED}or input parameter:${NC}"
      echo -e "${YELLOW}  > [ local\t| for this host ]${NC}"
      echo -e "${YELLOW}  > [ hosts\t| for all nodes in /etc/hosts ]${NC}"
      echo -e "${YELLOW}  > [ cp\t| for all control-plane nodes ]${NC}"
      echo -e "${YELLOW}  > [ wk\t| for all worker nodes ]${NC}" && exit
  elif [ "${status}" == "4" ]
    then
      list=$(echo "${CP_NODES} ${WK_NODES}")
      CP_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep "${CP_SUFFIX}" | tr -s '\n' ' ')
  elif [ "${status}" == "5" ]
    then
      list=$(echo "${CP_NODES} ${WK_NODES}")
      WK_NODE_SELECTOR=$(echo "${list}" | tr -s ' ' '\n' | grep "${WK_SUFFIX}" | tr -s '\n' ' ')
  fi
}

function node-message()
{
  echo -e "${RED} Please input parameter after ${YELLOW}\"${@}\" ${NC}"
  echo -e "${YELLOW}  > [ local\t| for this host ]${NC}"
  echo -e "${YELLOW}  > [ hosts\t| for all nodes in /etc/hosts ]${NC}"
  echo -e "${YELLOW}  > [ node\t| for specify nodes ]${NC}"
  echo -e "${YELLOW}  > [ cp\t| for all control-plane nodes ]${NC}"
  echo -e "${YELLOW}  > [ wk\t| for all worker nodes ]${NC}"
}

function cp-node-message()
{
  echo -e "${RED} Please input parameter after ${YELLOW}\"${@}\" ${NC}"
  echo -e "${YELLOW}  > [ local\t| for this host ]${NC}"
  echo -e "${YELLOW}  > [ hosts\t| for all control-plane nodes in /etc/hosts ]${NC}"
  echo -e "${YELLOW}  > [ node\t| for specify nodes ]${NC}"
}

function wk-node-message()
{
  echo -e "${RED} Please input parameter after ${YELLOW}\"${@}\" ${NC}"
  echo -e "${YELLOW}  > [ local\t| for this host ]${NC}"
  echo -e "${YELLOW}  > [ hosts\t| for all worker nodes in /etc/hosts ]${NC}"
  echo -e "${YELLOW}  > [ node\t| for specify nodes ]${NC}"
}

function exclude-non-join()
{
  #Exclude non-join nodes
  which kubectl &> /dev/null
  [ ${?} == 0 ] && status=1 || status=0
  [ "${status}" == "0" ] && echo -e " [${YELLOW}●${NC}] This node not activate.\n" && exit
  [ "${status}" == "1" ] && cp_nodes_exclude=$(kubectl get nodes | tail -n +2 | awk '{ print $1 }' | grep "${CP_SUFFIX}" | tr -s '\n' '|' | sed '$ s/.$//')
  [ "${status}" == "1" ] && wk_nodes_exclude=$(kubectl get nodes | tail -n +2 | awk '{ print $1 }' | grep "${WK_SUFFIX}" | tr -s '\n' '|' | sed '$ s/.$//')
  [ "${status}" == "1" ] && CP_NODE_SELECTOR=$(echo ${CP_NODE_SELECTOR} | tr -s ' ' '\n' | grep -E ${cp_nodes_exclude} | tr -s '\n' ' ')
  [ "${status}" == "1" ] && WK_NODE_SELECTOR=$(echo ${WK_NODE_SELECTOR} | tr -s ' ' '\n' | grep -E ${wk_nodes_exclude} | tr -s '\n' ' ')
}

function node-power()
{
  echo "${@}" | grep -wE "reboot|off" &> /dev/null
  [ ${?} != 0 ] && echo -e "${RED}Please input parameter [ reboot | off ]${NC}" && exit
  echo "${@}" | grep -w "reboot" &> /dev/null && power=reboot
  echo "${@}" | grep -w "off" &> /dev/null && power=poweroff
  [ -z ${3} ] && node-message ${2} && exit
  parameter=$(echo "${@}" | sed 's/ /\n/g' | grep -vwE "reboot|off" | sed ":a;N;s/\\n/ /g;ta")
  node-selector ${parameter}

  CP_NODE_SELECTOR=$(echo ${CP_NODE_SELECTOR} | tr -s ' ' '\n' | tac | tr -s '\n' ' ')
  interrupt ${RED}Continue to ${power} nodes:${YELLOW} ${WK_NODE_SELECTOR} ${CP_NODE_SELECTOR}${NC}
  echo -e "${YELLOW}nodes ${power} procedure${NC}"
  for list in ${WK_NODE_SELECTOR} ${CP_NODE_SELECTOR}
    do
      echo -e " [${GREEN}●${NC}] ${list} ${power} execute${NC}"
      sleep 3
      ssh -p ${SSH_PORT} ${list} "sudo ${power}" 2> /dev/null
    done; echo
}

#--- old repository need rebuild for pkgs.k8s.io
#function package-repository-add-deb()
#{
#}

function package-repository-add-deb-old()
{
  #cri-o package repository
  crio-available-version-check &> /dev/null
  #Podman latest version
  ssh -p ${SSH_PORT} ${install_list} "echo "deb https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/unstable/${OS_VER}/ /" | sudo tee /etc/apt/sources.list.d/devel:kubic:libcontainers:unstable.list" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "curl -fsSL "https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/unstable/${OS_VER}/Release.key" | gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/devel_kubic_libcontainers_unstable.gpg" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "ls -l /etc/apt/trusted.gpg.d/devel_kubic_libcontainers_unstable.gpg" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Repository\t| podman repository added" || echo -e " [${RED}●${NC}] Repository\t| podman repository not added"

#--- old repository need rebuild for pkgs.k8s.io
  [ "${VER_CONTROL}" == "latest" ] && for list in 1
    do
      status=0
      curl -s https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/${OS_VER}/Release.key | grep 'BEGIN PGP PUBLIC KEY BLOCK' &> /dev/null && status=1
      [ "${status}" == "1" ] && ssh -p ${SSH_PORT} ${install_list} "echo "deb https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/${OS_VER}/ /" | sudo tee /etc/apt/sources.list.d/devel:kubic:libcontainers:stable.list" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "curl -L https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/${OS_VER}/Release.key | sudo apt-key add - " &> /dev/null && status=0
      ssh -p ${SSH_PORT} ${install_list} "ls -al /etc/apt/sources.list.d/devel:kubic:libcontainers:stable.list" &> /dev/null
      [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Repository\t| cri-o repository added" || echo -e " [${RED}●${NC}] Repository\t| cri-o repository not added"
    done

  [ "${VER_CONTROL}" == "sub" ] && for list in ${CRIO_AVL_VER}
    do
      status=0
      curl -s https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}:/${list}/${OS_VER}/Release.key | grep 'BEGIN PGP PUBLIC KEY BLOCK' &> /dev/null && status=1
      [ "${status}" == "1" ] && ssh -p ${SSH_PORT} ${install_list} "echo "deb https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}:/${list}/${OS_VER}/ /" | sudo tee /etc/apt/sources.list.d/devel:kubic:libcontainers:stable:cri-o:${CRIO_RELEASE}:${list}.list" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "curl -L https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}:/${CRIO_SUBVER}/${OS_VER}/Release.key | sudo apt-key add - " &> /dev/null && status=0
      ssh -p ${SSH_PORT} ${install_list} "ls -al /etc/apt/sources.list.d/*${list}*" &> /dev/null
      [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Repository\t| cri-o ${list} repository added" || echo -e " [${RED}●${NC}] Repository\t| cri-o ${list} repository not added"
    done
#---

  #Kubernetes package repository
  ssh -p ${SSH_PORT} ${install_list} "ls -l /etc/apt/keyrings" &> /dev/null
  [ $? == 0 ] || ssh -p ${SSH_PORT} ${install_list} "sudo mkdir /etc/apt/keyrings"
  ssh -p ${SSH_PORT} ${install_list} "ls ${K8S_GPG_PATH}kubernetes-apt-keyring.gpg && sudo rm -r ${K8S_GPG_PATH}/kubernetes-apt-keyring.gpg" &> /dev/null
  #ssh -p ${SSH_PORT} ${install_list} "curl -fsSL https://pkgs.k8s.io/core:/stable:/v${KUBE_RELEASE}/deb/Release.key | sudo gpg --dearmor -o ${K8S_GPG_PATH}kubernetes-apt-keyring.gpg" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "curl -fsSL https://pkgs.k8s.io/core:/stable:/v${KUBE_RELEASE}/deb/Release.key | sudo apt-key --keyring ${K8S_GPG_PATH}kubernetes-apt-keyring.gpg add -" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "echo "deb [signed-by=/etc/apt/keyrings/kubernetes-apt-keyring.gpg] https://pkgs.k8s.io/core:/stable:/v${KUBE_RELEASE}/deb/ /" | sudo tee /etc/apt/sources.list.d/kubernetes.list" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "ls -al /etc/apt/sources.list.d/*kube*" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "ls ${K8S_GPG_PATH}/kubernetes-apt-keyring.gpg &>/dev/null" && echo -e " [${GREEN}●${NC}] Repository\t| Kubernetes package repository added" || echo -e " [${RED}●${NC}] Repository\t| Kubernetes package repository not added"
  #[ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "curl https://packages.cloud.google.com/apt/doc/apt-key.gpg | sudo apt-key --keyring ${K8S_GPG_PATH}cloud.google.gpg add -" &> /dev/null
  #[ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "echo "deb https://apt.kubernetes.io/ kubernetes-xenial main" | sudo tee /etc/apt/sources.list.d/kubernetes.list" &> /dev/null

  #helm package repository
  ssh -p ${SSH_PORT} ${install_list} "curl https://baltocdn.com/helm/signing.asc | gpg --dearmor | sudo tee /usr/share/keyrings/helm.gpg > /dev/null" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/helm.gpg] https://baltocdn.com/helm/stable/debian/ all main" | sudo tee /etc/apt/sources.list.d/helm-stable-debian.list" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "ls -al /etc/apt/sources.list.d/*helm* &> /dev/null" && echo -e " [${GREEN}●${NC}] Repository\t| Helm package repository added" || echo -e " [${RED}●${NC}] Repository\t| Helm package repository not added"
  
  #update list
  ssh -p ${SSH_PORT} ${install_list} "sudo apt -qy update" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Repository\t| cache updated"
}

function package-repository-add-npm()
{
  #cri-o package repository
  crio-available-version-check &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && OS_VER="CentOS_8_Stream"

  if [ "${OS_VER}" == "CentOS_8_Stream" ]
    then
      [ "${VER_CONTROL}" == "latest" ] && for list in 1
        do
          status=0
          [ "${VER_CONTROL}" == "latest" ] && curl -s https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/${OS_VER}/devel:kubic:libcontainers:stable.repo | grep 'devel_kubic_libcontainers_stable' &> /dev/null && status=1
          [ "${VER_CONTROL}" == "latest" ] && echo ${status} | grep "1" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo curl -L -o /etc/yum.repos.d/devel:kubic:libcontainers:stable.repo https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/${OS_VER}/devel:kubic:libcontainers:stable.repo" &> /dev/null && status=0
          [ "${VER_CONTROL}" == "latest" ] && curl -s https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}/${OS_VER}/devel:kubic:libcontainers:stable:cri-o:${CRIO_RELEASE}.repo | grep 'devel_kubic_libcontainers_stable' &> /dev/null && status=1
          [ "${VER_CONTROL}" == "latest" ] && echo ${status} | grep "1" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo curl -L -o /etc/yum.repos.d/devel:kubic:libcontainers:stable:cri-o:${CRIO_RELEASE}.repo https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}/${OS_VER}/devel:kubic:libcontainers:stable:cri-o:${CRIO_RELEASE}.repo" &> /dev/null
          [ "${VER_CONTROL}" == "latest" ] && echo ${status} | grep "1" &> /dev/null && echo -e " [${GREEN}●${NC}] Repository\t| ${CRIO_RELEASE} repository has been added" #|| echo -e " [${YELLOW}●${NC}] ${CRIO_RELEASE} repository not exist"
        done

      [ "${VER_CONTROL}" == "sub" ] && for list in ${CRIO_AVL_VER}
        do
          status=0
          [ "${VER_CONTROL}" == "sub" ] && curl -s https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/${OS_VER}/devel:kubic:libcontainers:stable.repo | grep 'devel_kubic_libcontainers_stable' &> /dev/null && status=1
          [ "${VER_CONTROL}" == "sub" ] && echo ${status} | grep "1" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo curl -L -o /etc/yum.repos.d/devel:kubic:libcontainers:stable.repo https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable/${OS_VER}/devel:kubic:libcontainers:stable.repo" &> /dev/null && status=0
          [ "${VER_CONTROL}" == "sub" ] && curl -s https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}:/${list}/${OS_VER}/devel:kubic:libcontainers:stable:cri-o:${CRIO_RELEASE}:${list}.repo | grep 'devel_kubic_libcontainers_stable' &> /dev/null && status=1
          [ "${VER_CONTROL}" == "sub" ] && echo ${status} | grep "1" &> /dev/null && ssh -p ${SSH_PORT} ${install_list} "sudo curl -L -o /etc/yum.repos.d/devel:kubic:libcontainers:stable:cri-o:${CRIO_RELEASE}:${list}.repo https://download.opensuse.org/repositories/devel:/kubic:/libcontainers:/stable:/cri-o:/${CRIO_RELEASE}:/${list}/${OS_VER}/devel:kubic:libcontainers:stable:cri-o:${CRIO_RELEASE}:${list}.repo" &> /dev/null
          [ "${VER_CONTROL}" == "sub" ] && echo ${status} | grep "1" &> /dev/null && echo -e " [${GREEN}●${NC}] Repository\t| ${list} repository has been added" #|| echo -e " [${YELLOW}●${NC}] ${list} repository not exist"
        done
  fi

  #Kubernetes package repository
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} 'sudo bash -c "cat << \EOF > /etc/yum.repos.d/kubernetes.repo
[kubernetes]
name=Kubernetes
baseurl=https://packages.cloud.google.com/yum/repos/kubernetes-el7-\$basearch
enabled=1
gpgcheck=1
gpgkey=https://packages.cloud.google.com/yum/doc/rpm-package-key.gpg
exclude=kubelet kubeadm kubectl
EOF"' && echo -e " [${GREEN}●${NC}] Repository\t| kubernetes.repo has been added"

  #Kubernetes package repository
#  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} 'sudo bash -c "cat << \EOF > /etc/yum.repos.d/kubernetes.repo
#[kubernetes]
#name=Kubernetes
#baseurl=https://pkgs.k8s.io/core:/stable:/v${KUBE_RELEASE}/rpm/
#enabled=1
#gpgcheck=1
#gpgkey=https://pkgs.k8s.io/core:/stable:/v${KUBE_RELEASE}/rpm/repodata/repomd.xml.key
#exclude=kubelet kubeadm kubectl cri-tools kubernetes-cni
#EOF"' && echo -e " [${GREEN}●${NC}] Repository\t| kubernetes.repo has been added"

  #update list
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf clean all" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Repository\t| cache cleanup"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf versionlock delete cri-o kubectl kubeadm kubelet podman" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf makecache" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Repository\t| cache updated"
}

function package-check()
{
  #[ -z ${1} ] && node-message ${@} && exit
  node-selector ${@}
  #cri-o
  crio_version="crio version | grep "^Version""
  crio_status="sudo systemctl status crio | grep 'Active'"
  crio_time="sudo systemctl status crio | grep 'Active' | cut -d ';' -f 2 | grep -v 'inactive'"
  #kubelet
  kubelet_version="kubelet --version | sed 's/v//g' 2> /dev/null"
  kubelet_active="sudo systemctl status kubelet | grep 'Main PID' | grep 'kubelet' 2> /dev/null"
  kubelet_status="sudo systemctl status kubelet | grep 'Active' 2> /dev/null"
  kubelet_time="sudo systemctl status kubelet | grep 'Active' | cut -d ';' -f 2 | grep -v 'inactive' 2> /dev/null"
  #kubeadm
  kubeadm_version="kubeadm version -o yaml | grep 'gitVersion' | sed 's/v//g'"
  #kubectl
  kubectl_versio="kubectl version -o yaml 2>&1 | grep -A 9 'clientVersion:' | grep 'gitVersion' | sed 's/v//g'"

  for clist in ${CP_NODE_SELECTOR}
    do
      echo -e "${YELLOW}${clist} | Package status${NC}"
      ssh -p ${SSH_PORT} ${clist} 'hostname' &> /dev/null 2>&1
      [ ${?} != 0 ] && echo -e " [${RED}●${NC}] This node not available\n" && continue

      #cri-o
      status=0
      ssh -p ${SSH_PORT} ${clist} "which crio > /dev/null 2>&1"
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] crio\t| not install" && status=1
      #Status active
      ssh -p ${SSH_PORT} ${clist} "sudo systemctl status crio 2> /dev/null | grep "Active:" | grep "failed" &> /dev/null" && status=0
      [ ${?} != 0 ] && [ "${status}" == 0 ] && echo -e " [${GREEN}●${NC}] crio\t| `ssh -p ${SSH_PORT} ${clist} ${crio_version} 2>&1 | sed '/time/d' | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${clist} ${crio_status} | awk '{ print $2,$3 }'` | `ssh -p ${SSH_PORT} ${clist} ${crio_time} | sed 's/^.//' | grep -v 'inactive'`"
      #Status failed [if cri-o has been install]
      ssh -p ${SSH_PORT} ${clist} "sudo systemctl status crio 2> /dev/null | grep "Active:" | grep "failed" &> /dev/null" ssh -p ${SSH_PORT} ${clist} sudo systemctl status crio | grep "Loaded:" | grep -v "not-found" && status=0
      [ ${?} == 0 ] && [ "${status}" == 0 ] && echo -e " [${YELLOW}●${NC}] crio\t| `ssh -p ${SSH_PORT} ${clist} ${crio_version} 2>&1 | sed '/time/d' | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${clist} ${crio_status} | awk '{ print $2,$3,$4 }'` | `ssh -p ${SSH_PORT} ${clist} ${crio_time} | sed 's/^.//'`"
      #kubelet
      ssh -p ${SSH_PORT} ${clist} "which kubelet" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] kubelet\t| not install" && status=0 || status=1
      [ "${status}" == "1" ] && ssh -p ${SSH_PORT} ${clist} "${kubelet_active}" &> /dev/null && active=0 || active=1
      [ "${status}" == "1" ] && [ "${active}" == "0" ] && echo -e " [${GREEN}●${NC}] kubelet\t| `ssh -p ${SSH_PORT} ${clist} ${kubelet_version} | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${clist} ${kubelet_status} | awk '{ print $2,$3 }'` | `ssh -p ${SSH_PORT} ${clist} ${kubelet_time} | sed 's/^.//' | grep -v 'inactive'`"
      [ "${status}" == "1" ] && [ "${active}" == "1" ] && echo -e " [${YELLOW}●${NC}] kubelet\t| `ssh -p ${SSH_PORT} ${clist} ${kubelet_version} | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${clist} ${kubelet_status} | awk '{ print $2,$3 }'` | `ssh -p ${SSH_PORT} ${clist} ${kubelet_time} | sed 's/^.//' | grep -v 'inactive'`"
      #kubeadm
      ssh -p ${SSH_PORT} ${clist} "which kubeadm" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] kubeadm\t| not install" || echo -e " [${GREEN}●${NC}] kubeadm\t| `ssh -p ${SSH_PORT} ${clist} ${kubeadm_version} 2>&1 | awk '{ print $2 }' `"
      #kubectl
      ssh -p ${SSH_PORT} ${clist} "which kubectl" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] kubectl\t| not install" || echo -e " [${GREEN}●${NC}] kubectl\t| `ssh -p ${SSH_PORT} ${clist} ${kubectl_versio} 2>&1 | sed '/localhost:8080/d' | awk '{ print $2 }'`"
      #helm
      ssh -p ${SSH_PORT} ${clist} "which helm" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] helm\t| not install" || echo -e " [${GREEN}●${NC}] helm\t| `ssh -p ${SSH_PORT} ${clist} helm version | awk '{ print $1 }' | cut -d '"' -f 2 | sed 's/v//g'`"
      #podman
      ssh -p ${SSH_PORT} ${clist} "which podman" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] podman\t| not install" || echo -e " [${GREEN}●${NC}] podman\t| `ssh -p ${SSH_PORT} ${clist} podman version 2> /dev/null | grep '^Version' | awk '{ print $2 }'`"
      #skopeo
      ssh -p ${SSH_PORT} ${clist} "which skopeo" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] skopeo\t| not install" || echo -e " [${GREEN}●${NC}] skopeo\t| `ssh -p ${SSH_PORT} ${clist} sudo skopeo --version 2> /dev/null | awk '{ print $3 }'`"
      #k9s
      ssh -p ${SSH_PORT} ${clist} "which k9s" &> /dev/null 
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] k9s\t| not install" || echo -e " [${GREEN}●${NC}] k9s\t| `ssh -p ${SSH_PORT} ${clist} k9s version -s | grep Version | awk '{ print $2 }' | sed 's/v//g'`"
    done

  for wlist in ${WK_NODE_SELECTOR}
    do
      echo -e "${YELLOW}${wlist} | Package status${NC}"
      ssh -p ${SSH_PORT} ${wlist} 'hostname' &> /dev/null 2>&1
      [ ${?} != 0 ] && echo -e " [${RED}●${NC}] This node not available\n" && continue
      
      #cri-o
      status=0
      ssh -p ${SSH_PORT} ${wlist} "which crio > /dev/null 2>&1"
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] crio\t| not install" && status=1
      ssh -p ${SSH_PORT} ${wlist} "sudo systemctl status crio 2> /dev/null | grep "Active:" | grep "failed" &> /dev/null" && status=0
      [ ${?} != 0 ] && [ "${status}" == 0 ] && echo -e " [${GREEN}●${NC}] crio\t| `ssh -p ${SSH_PORT} ${wlist} ${crio_version} 2>&1 | sed '/time/d' | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${wlist} ${crio_status} | awk '{ print $2,$3 }'` | `ssh -p ${SSH_PORT} ${wlist} ${crio_time} | sed 's/^.//' | grep -v 'inactive'`"
      ssh -p ${SSH_PORT} ${wlist} "sudo systemctl status crio 2> /dev/null | grep "Active:" | grep "failed" &> /dev/null" && status=0
      [ ${?} == 0 ] && [ "${status}" == 0 ] && echo -e " [${YELLOW}●${NC}] crio\t| `ssh -p ${SSH_PORT} ${wlist} ${crio_version} 2>&1 | sed '/time/d' | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${wlist} ${crio_status} | awk '{ print $2,$3,$4 }'` | `ssh -p ${SSH_PORT} ${wlist} ${crio_time} | sed 's/^.//'`"
      #kubelet
      ssh -p ${SSH_PORT} ${wlist} "which kubelet" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] kubelet\t| not install" && status=0 || status=1
      [ "${status}" == "1" ] && ssh -p ${SSH_PORT} ${wlist} "${kubelet_active}" &> /dev/null && active=0 || active=1
      [ "${status}" == "1" ] && [ "${active}" == "0" ] && echo -e " [${GREEN}●${NC}] kubelet\t| `ssh -p ${SSH_PORT} ${wlist} ${kubelet_version} | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${wlist} ${kubelet_status} | awk '{ print $2,$3 }'` | `ssh -p ${SSH_PORT} ${wlist} ${kubelet_time} | sed 's/^.//' | grep -v 'inactive'`"
      [ "${status}" == "1" ] && [ "${active}" == "1" ] && echo -e " [${YELLOW}●${NC}] kubelet\t| `ssh -p ${SSH_PORT} ${wlist} ${kubelet_version} | awk '{ print $2 }'` | `ssh -p ${SSH_PORT} ${wlist} ${kubelet_status} | awk '{ print $2,$3 }'` | `ssh -p ${SSH_PORT} ${wlist} ${kubelet_time} | sed 's/^.//' | grep -v 'inactive'`"
      #kubeadm
      ssh -p ${SSH_PORT} ${wlist} "which kubeadm " &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] kubeadm\t| not install" || echo -e " [${GREEN}●${NC}] kubeadm\t| `ssh -p ${SSH_PORT} ${wlist} ${kubeadm_version} 2>&1 | awk '{ print $2 }' `"
      #podman
      ssh -p ${SSH_PORT} ${wlist} "which podman" &> /dev/null
      [ ${?} != 0 ] && echo -e " [${YELLOW}●${NC}] podman\t| not install" || echo -e " [${GREEN}●${NC}] podman\t| `ssh -p ${SSH_PORT} ${wlist} podman version 2> /dev/null | grep '^Version' | awk '{ print $2 }'`"
    done
}

function package-install-crio()
{
  #install cri-o
  status=0
  [ "${OS_VER}" == "CentOS_8_Stream" ] && CRI_PROVIDES=$(sudo dnf provides cri-o 2> /dev/null | grep 'Provide' | head -n 5 | cut -d '=' -f 2 | grep ${CRIO_RELEASE} | head -n 1 | sed 's/^.//')

  [ "${OS_VER}" == "RHEL_8" ] && [ "${VER_CONTROL}" == "sub" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y cri-o-${CRIO_SUBVER}-* crun" > /dev/null 2>&1 && status=1
  [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y cri-o-${CRI_PROVIDES} crun" > /dev/null 2>&1 && status=1
  [ "${OS_VER}" == "RHEL_8" ] && [ "${VER_CONTROL}" == "latest" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y cri-o-${CRIO_RELEASE}.* crun" > /dev/null 2>&1

  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${VER_CONTROL}" == "sub" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y cri-o-${CRIO_SUBVER}-* crun" > /dev/null 2>&1 && status=1
  [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y cri-o-${CRI_PROVIDES} crun" > /dev/null 2>&1 && status=1
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${VER_CONTROL}" == "latest" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y cri-o-${CRIO_RELEASE}.* crun" > /dev/null 2>&1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark unhold crun" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark unhold cri-o" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy crun" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${VER_CONTROL}" == "sub" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy -o Dpkg::Options::="--force-confold" cri-o=${CRIO_SUBVER}~*" &> /dev/null && status=1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${VER_CONTROL}" == "latest" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy -o Dpkg::Options::="--force-confold" cri-o=${CRIO_RELEASE}~* crun" > /dev/null 2>&1 && status=1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark hold crun" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark hold cri-o" &> /dev/null

  ssh -p ${SSH_PORT} ${install_list} "sudo sed -i '/'1100:200'/d' /etc/cni/net.d/100-crio-bridge.conflist" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "sudo sed -i '/\"dst\": \"::\/0\"/d' /etc/cni/net.d/100-crio-bridge.conflist" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's|{ \"dst\": \"0.0.0.0/0\" },|{ \"dst\": \"0.0.0.0/0\" }|g' /etc/cni/net.d/100-crio-bridge.conflist" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's|\[{ \"subnet\": \"10.85.0.0/16\" }\],|\[{ \"subnet\": \"10.85.0.0/16\" }\]|g' /etc/cni/net.d/100-crio-bridge.conflist" &> /dev/null
  crio-install-check ${install_list}
}

function package-configure-crio()
{
  #setup /etc/crio/crio.conf
  ssh -p ${SSH_PORT} ${install_list} cat /etc/crio/crio.conf 2> /dev/null | grep -A 3 "\[crio.runtime\]" | grep "conmon_cgroup = \"pod\"" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's/\[crio.runtime\]/\[crio.runtime\]\nconmon_cgroup = \"pod\"\ncgroup_manager = \"systemd\"\ndefault_runtime = \"crun\"/g' /etc/crio/crio.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} cat /etc/crio/crio.conf 2> /dev/null | grep -A 3 "\[crio.runtime.runtimes.crun\]" | grep "runtime_path = \"/usr/local/bin/crun\"" &> /dev/null #/usr/bin/crun
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's/# \[crio.runtime.runtimes.runc\]/\[crio.runtime.runtimes.crun\]\nruntime_path = \"\/usr\/bin\/crun\"\nruntime_type = \"oci\"\nruntime_root = \"\"/g' /etc/crio/crio.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} cat /etc/crio/crio.conf 2> /dev/null | grep -A 2 "\[crio.network\]" | grep "network_dir = \"/etc/cni/net.d/\"" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "sudo sed -i 's/\[crio.network\]/\[crio.network\]\nnetwork_dir = \"\/etc\/cni\/net.d\/\"\nplugin_dir = \"\/opt\/cni\/bin\"/g' /etc/crio/crio.conf" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} cat /etc/crio/crio.conf  > /dev/null 2>&1
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Package\t| crio.conf configured" || echo -e " [${YELLOW}●${NC}] Package\t| crio.conf not exist"
}

function image-repository-setting()
{
  ssh -p ${SSH_PORT} ${install_list} "which crio" &> /dev/null && test=1
  #Setup image repository registries
  target='unqualified-search-registries'
  replace='unqualified-search-registries = \[\"registry.fedoraproject.org\", \"registry.access.redhat.com\", \"docker.io\", \"quay.io\", \"registry.vattenlab.com:443\", \"gitlab.vattenlab.com:5050\"\]'
  
  ssh -p ${SSH_PORT} ${install_list} "sudo sed -i \"s/${target}/# ${target}/g\" /etc/containers/registries.conf"
  ssh -p ${SSH_PORT} ${install_list} "sudo sed -i \"/# ${target}/a ${replace}\" /etc/containers/registries.conf"
  ssh -p ${SSH_PORT} ${install_list} "sudo sed -i \"/# ${target}/d\" /etc/containers/registries.conf"

  ssh -p ${SSH_PORT} ${install_list} cat /etc/containers/registries.conf 2> /dev/null | grep "${target}" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "${sed_context}"
  #Setup image repository policy
  [ ${test} == 0 ] && ssh -p ${SSH_PORT} ${install_list} 'sudo bash -c "cat << \EOF > /etc/containers/policy.json
{
    \"default\": [
        {
            \"type\": \"insecureAcceptAnything\"
        }
    ],
    \"transports\":
        {
            \"docker-daemon\":
                {
                    \"\": [{\"type\":\"insecureAcceptAnything\"}]
                }
        }
}
EOF"' &> /dev/null && echo -e " [${GREEN}●${NC}] Package\t| policy.json updated"
}

function package-install-podman()
{
  #install podman
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y podman=${PODMAN_VER}*" &> /dev/null

  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y podman=${PODMAN_VER}*" &> /dev/null

  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark unhold podman" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy podman=${PODMAN_VER}*" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark hold podman" &> /dev/null
  podman-install-check ${install_list}
}

function package-install-skopeo()
{
  #install skopeo
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy skopeo=${SKOPEO_VER}*" &> /dev/null
  skopeo-install-check ${install_list}
}

function package-install-kube-package()
{
  #install kube-package
  curl -s https://packages.cloud.google.com/yum/doc/rpm-package-key.gpg | grep '<title>' | grep 'Error' &> /dev/null
  [ ${?} == 0 ] && echo -e " [${RED}●${NC}] Google server rpm-pkg-key.gpg is missing"
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf versionlock delete kubeadm kubelet kubectl" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y kubernetes-cni" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y kubelet-${KUBE_SUBVER}-* kubeadm-${KUBE_SUBVER}-* kubectl-${KUBE_SUBVER}-* --disableexcludes=kubernetes" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf versionlock add kubelet kubeadm kubectl" &> /dev/null

  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf versionlock delete kubeadm kubelet kubectl" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y kubernetes-cni" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf install -y kubelet-${KUBE_SUBVER}-* kubeadm-${KUBE_SUBVER}-* kubectl-${KUBE_SUBVER}-* --disableexcludes=kubernetes" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "sudo dnf versionlock add kubelet kubeadm kubectl" &> /dev/null

  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark unhold kubeadm kubelet kubectl" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy kubernetes-cni cri-tools" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy apt-transport-https --yes" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy kubeadm=${KUBE_SUBVER}-* kubelet=${KUBE_SUBVER}-* kubectl=${KUBE_SUBVER}-*" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt-mark hold kubeadm kubelet kubectl" &> /dev/null

  kubelet-install-check ${install_list}
  kubeadm-install-check ${install_list}
  kubectl-instal-check ${install_list}
}

function package-install-k9s()
{
  #install k9s
  ssh -p ${SSH_PORT} ${install_list} "ls -al ~/bin/k9s" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] ${install_list} k9s already installed." || ssh -p ${SSH_PORT} ${install_list} "curl -sS https://webinstall.dev/k9s@${K9S_VERSION} | timeout 20 bash" &> /dev/null
  #k9s path setup
  ssh -p ${SSH_PORT} ${install_list} "mv ~/.local/bin/k9s ~/bin/" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/environment | grep "/home/${USER}/bin" &> /dev/null" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "cat /etc/environment | tr -s ':' '\n' | sed 's/\/snap\/bin\"/\/snap\/bin\n\/home\/${USER}\/bin\"/g' | tr -s '\n' ':' | sed '$ s/.$//' | sudo tee /etc/environment &> /dev/null" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/profile | grep 'export KUBE_EDITOR=nano' &> /dev/null" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "export KUBE_EDITOR=nano" | sudo tee -a /etc/profile" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "cat /etc/profile | grep 'export K9S_EDITOR=nano' &> /dev/null" &> /dev/null
  [ ${?} != 0 ] && ssh -p ${SSH_PORT} ${install_list} "echo "export K9S_EDITOR=nano" | sudo tee -a /etc/profile" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "rm -r ~/Downloads/" &> /dev/null
  ssh -p ${SSH_PORT} ${install_list} "ls -al ~/bin/k9s" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Package\t| k9s installed"
}

function package-install-helm()
{
  #install helm
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${install_list} "bash <(wget -q -o /dev/null -O - get_helm.sh https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3)" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${install_list} "bash <(wget -q -o /dev/null -O - get_helm.sh https://raw.githubusercontent.com/helm/helm/main/scripts/get-helm-3)" &> /dev/null

  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt -qy update" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${install_list} "sudo apt install -qy helm=${HELM_VER}*" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] Package\t| helm installed" || echo -e " [${RED}●${NC}] Package\t| helm\t| not installed"
}

function package-install-docker()
{
  #insatll docker
  ssh -p ${SSH_PORT} ${1} ls /etc/apt/keyrings/docker.gpg &> /dev/null
  [ ${?} == 0 ] && ssh -p ${SSH_PORT} ${1} sudo rm /etc/apt/keyrings/docker.gpg &> /dev/null || ssh -p ${SSH_PORT} ${1} "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg"
  ssh -p ${SSH_PORT} ${1} "echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list > /dev/null"
  ssh -p ${SSH_PORT} ${1} sudo apt update
  ssh -p ${SSH_PORT} ${1} sudo apt install -qy docker-ce docker-ce-cli docker-buildx-plugin docker-compose-plugin
}

function package-install-docker-compose()
{
  #insatll docker-compose
  ssh -p ${SSH_PORT} ${1} sudo curl -L "https://github.com/docker/compose/releases/download/${DOCKER_COMPOSE_VER}/docker-compose-$(uname -s)-$(uname -m)" -o /usr/bin/docker-compose
  ssh -p ${SSH_PORT} ${1} sudo chmod +x /usr/bin/docker-compose
}

function package-hold-check()
{
  for list in ${HOLD_LIST}
    do
      ssh -p ${SSH_PORT} ${1} "sudo apt-mark showhold | grep ${list}" &> /dev/null
      [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] ${list}\t| is hold" || echo -e " [${RED}●${NC}] ${list}\t| not hold"
    done
}

function package-hold()
{
  for list in ${HOLD_LIST}
    do
      ssh -p ${SSH_PORT} ${1} "sudo apt-mark showhold | grep ${list}" &> /dev/null
      [ ${?} == 0 ] || ssh -p ${SSH_PORT} ${1} "sudo apt-mark hold ${list}" &> /dev/null
    done
}

function package-remove-k9s()
{
  status=0
  ssh -p ${SSH_PORT} ${remove_list} "which k9s" &> /dev/null || status=2
  [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] k9s\t| not install"
  [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "rm ~/bin/k9s" &> /dev/null
  [ ${?} == 0 ] && echo -e " [${GREEN}●${NC}] k9s\t| removed"
  ssh -p ${SSH_PORT} ${remove_list} "which k9s" &> /dev/null && status=1
  [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] k9s\t| not remove"
}

function package-remove-kube()
{
  #RHEL
  status=0
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubeadm" &> /dev/null || status=2
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubeadm\t| not install"
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf versionlock delete kubeadm" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf remove -y kubeadm" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "RHEL_8" ] &&  echo -e " [${GREEN}●${NC}] kubeadm\t| removed"
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubeadm" &> /dev/null && status=1
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubeadm\t| not remove"

  status=0
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubectl" &> /dev/null || status=2
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubectl\t| not install"
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf versionlock delete kubectl" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf remove -y kubectl" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "RHEL_8" ] && echo -e " [${GREEN}●${NC}] kubectl\t| removed"
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubectl" &> /dev/null && status=1
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubectl\t| not remove"

  status=0
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubelet" &> /dev/null || status=2
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubelet\t| not install"
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf versionlock delete kubelet" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo systemctl disable --now kubelet" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf remove -y kubelet" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "RHEL_8" ] && echo -e " [${GREEN}●${NC}] kubelet\t| removed"
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubelet" &> /dev/null && status=1
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubelet\t| not remove"

  #Rocky
  status=0
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubeadm" &> /dev/null || status=2
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubeadm\t| not install"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf versionlock delete kubeadm" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf remove -y kubeadm" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "CentOS_8_Stream" ] && echo -e " [${GREEN}●${NC}] kubeadm\t| removed"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubeadm" &> /dev/null && status=1
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubeadm\t| not remove"

  status=0
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubectl" &> /dev/null || status=2
