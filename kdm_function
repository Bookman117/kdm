  [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "2" ] && echo -e "[${RED}●${NC}] helm not install"
  [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh ${remove_list} "sudo apt remove -qy --purge --allow-change-held-packages helm" &> /dev/null
  [ ${?} == 0 ] && [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && echo -e "[${GREEN}●${NC}] helm removed"
  [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && ssh ${remove_list} "which helm" &> /dev/null && status=1
  [ "${CRIO_OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "1" ] && echo -e "[${RED}●${NC}] helm not remove"
