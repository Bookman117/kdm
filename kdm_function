  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubelet\t| not install"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf versionlock delete kubelet" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo systemctl disable --now kubelet" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf remove -y kubelet" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "CentOS_8_Stream" ] &&  echo -e " [${GREEN}●${NC}] kubelet\t| removed"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubelet" &> /dev/null && status=1
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubelet\t| not remove"

  #Ubuntu
  status=0
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubeadm" &> /dev/null || status=2
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubeadm\t| not install"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo apt-mark unhold kubeadm" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo apt purge -qy --allow-change-held-packages kubeadm" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "xUbuntu_22.04" ] &&  echo -e " [${GREEN}●${NC}] kubeadm\t| removed"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubeadm" &> /dev/null && status=1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubeadm\t| not remove"
  
  status=0
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubectl" &> /dev/null || status=2
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubectl\t| not install"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo apt-mark unhold kubectl" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo apt purge -qy --allow-change-held-packages kubectl" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "xUbuntu_22.04" ] &&  echo -e " [${GREEN}●${NC}] kubectl\t| removed"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubectl" &> /dev/null && status=1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubectl\t| not remove"
  
  status=0
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubelet" &> /dev/null || status=2
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] kubelet\t| not install"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo apt-mark unhold kubelet" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo systemctl disable --now kubelet" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo apt purge -qy --allow-change-held-packages kubelet kubernetes-cni" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "xUbuntu_22.04" ] &&  echo -e " [${GREEN}●${NC}] kubelet\t| removed"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which kubelet" &> /dev/null && status=1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] kubelet\t| not remove"
}

function package-remove-crio()
{
  #RHEL
  status=0
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which crio" &> /dev/null || status=2
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] cri-o\t| not install"
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo systemctl disable --now cri-o" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf remove -y cri-o" &> /dev/null
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo rm $(which crio)" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "RHEL_8" ] && echo -e " [${GREEN}●${NC}] cri-o removed"
  [ "${OS_VER}" == "RHEL_8" ] && ssh -p ${SSH_PORT} ${remove_list} "which crio" &> /dev/null && status=1
  [ "${OS_VER}" == "RHEL_8" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] cri-o\t| not remove"

  #Rocky
  status=0
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${remove_list} "which crio" &> /dev/null || status=2
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] cri-o\t| not install"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo systemctl disable --now cri-o" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo dnf remove -y cri-o" &> /dev/null
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo rm $(which crio)"
  [ ${?} == 0 ] && [ "${OS_VER}" == "CentOS_8_Stream" ] && echo -e " [${GREEN}●${NC}] cri-o removed"
  [ "${OS_VER}" == "CentOS_8_Stream" ] && ssh -p ${SSH_PORT} ${remove_list} "which crio" &> /dev/null && status=1
  [ "${OS_VER}" == "CentOS_8_Stream" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] cri-o\t| not remove"

  #Ubuntu
  status=0
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which crio" &> /dev/null || status=2
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "2" ] && echo -e " [${RED}●${NC}] cri-o\t| not install"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo systemctl disable --now crio" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo apt purge -qy --allow-change-held-packages cri-o" &> /dev/null
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "0" ] && ssh -p ${SSH_PORT} ${remove_list} "sudo rm $(which crio)" &> /dev/null
  [ ${?} == 0 ] && [ "${OS_VER}" == "xUbuntu_22.04" ] && echo -e " [${GREEN}●${NC}] cri-o removed"
  [ "${OS_VER}" == "xUbuntu_22.04" ] && ssh -p ${SSH_PORT} ${remove_list} "which crio" &> /dev/null && status=1
  [ "${OS_VER}" == "xUbuntu_22.04" ] && [ "${status}" == "1" ] && echo -e " [${RED}●${NC}] cri-o\t| not remove"
}

